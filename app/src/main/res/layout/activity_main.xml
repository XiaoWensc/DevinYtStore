<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zxw.cn.com.rrxjava.ui.main.MainActivity">

    <FrameLayout
        android:id="@+id/main_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/home_radio_button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/radioHome"
        android:weightSum="5">

        <cn.bingoogolapple.badgeview.BGABadgeRadioButton
            android:id="@+id/radioHome"
            style="@style/home_tab_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/main_bottom_home"
            android:gravity="center"
            android:padding="6dp"
            android:tag="0"
            android:text="首页" />

        <cn.bingoogolapple.badgeview.BGABadgeRadioButton
            android:id="@+id/radioSort"
            style="@style/home_tab_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/main_bottom_category"
            android:gravity="center"
            android:padding="6dp"
            android:tag="1"
            android:text="分类" />

        <cn.bingoogolapple.badgeview.BGABadgeRadioButton
            android:id="@+id/radioDis"
            style="@style/home_tab_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/main_bottom_dis"
            android:gravity="center"
            android:padding="6dp"
            android:tag="2"
            android:text="发现" />

        <cn.bingoogolapple.badgeview.BGABadgeRadioButton
            android:id="@+id/radioCart"
            style="@style/home_tab_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/main_bottom_cart"
            android:gravity="center"
            android:padding="6dp"
            android:tag="3"
            android:text="购物车" />

        <cn.bingoogolapple.badgeview.BGABadgeRadioButton
            android:id="@+id/radioAccount"
            style="@style/home_tab_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/main_bottom_personal"
            android:gravity="center"
            android:padding="6dp"
            android:tag="4"
            android:text="我的" />
    </RadioGroup>


</LinearLayout>
