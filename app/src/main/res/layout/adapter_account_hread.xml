<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/ll_personal_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@mipmap/bg_myaccount"
        android:orientation="horizontal">

        <zxw.cn.com.rrxjava.widget.RoundImageView
            android:id="@+id/roundImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:baseline="2dp"
            android:src="@mipmap/img_user_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgSupVip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_login_account"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/tv_login_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="注册/登录"
                android:textColor="#FFFAFA"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSupVip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/ic_right_vip1"
            android:background="@drawable/bg_account_vip1"
            android:paddingLeft="13dp"
            android:paddingRight="5dp"
            android:paddingTop="4dp"
            android:textSize="10sp"
            android:visibility="gone"
            android:paddingBottom="4dp"
            android:textColor="#D1B262"
            android:drawablePadding="8dp"
            android:text="超级会员权益"/>

        <TextView
            android:id="@+id/tvVip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/ic_right_vip2"
            android:background="@drawable/bg_account_vip2"
            android:paddingLeft="13dp"
            android:paddingRight="5dp"
            android:paddingTop="4dp"
            android:visibility="gone"
            android:textSize="10sp"
            android:paddingBottom="4dp"
            android:textColor="#760D01"
            android:drawablePadding="8dp"
            android:text="开通会员享权益"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>