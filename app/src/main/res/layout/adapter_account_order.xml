<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@mipmap/order_0"
        android:gravity="center"
        android:text="我的订单"
        android:textColor="#000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="查看全部订单"
        android:drawableRight="@mipmap/right"
        android:drawablePadding="10dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView3">
        <cn.bingoogolapple.badgeview.BGABadgeTextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:drawablePadding="5dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/order_1"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="待付款"/>
        <cn.bingoogolapple.badgeview.BGABadgeTextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:drawablePadding="5dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/order_2"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="待收货"/>
        <cn.bingoogolapple.badgeview.BGABadgeTextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:drawablePadding="5dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/order_3"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="待评价"/>
        <cn.bingoogolapple.badgeview.BGABadgeTextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:drawablePadding="5dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/order_4"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="退换/返修"/>
    </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>