<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <zxw.cn.com.rrxjava.widget.webview.UIWebView
        android:id="@+id/uiWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:innerOpen="false" />

    <LinearLayout
        android:id="@+id/container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFAFA"
        android:layout_gravity="top"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/index_myLocation"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/xiala"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="成都"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/search_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/index_main_edittext_bg"
            android:drawableLeft="@mipmap/ic_search"
            android:padding="8dp"
            android:drawablePadding="5dp"
            android:text="请输入商品或关键字"
            android:textColor="#9e9e9e"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_sao_sao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:contentDescription="@null"
            android:src="@mipmap/ic_saoma" />
    </LinearLayout>
</FrameLayout>